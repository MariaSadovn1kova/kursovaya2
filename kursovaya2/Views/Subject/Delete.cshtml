@model kursovaya2.Models.Subject

@{
    ViewBag.Title = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Предмет</h4>
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            Название предмета
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Имя лектора
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullNameOfLecturer)
        </dd>

        <dt>
            Название кафедры
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TitleOfDepartmen)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-primary" /> |
            @Html.ActionLink("Вернуться", "Index")
        </div>
    }
</div>