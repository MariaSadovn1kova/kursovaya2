@model kursovaya2.Models.Registration

@{
    ViewBag.Title = "Добавление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Добавление</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Регистрация задания</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p>ID</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="mt-3">Номер зачетной книжки</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student_StudentNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Student_StudentNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="mt-3">Номер задания по предмету</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaskOnTheSubject_NumberOfSubject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaskOnTheSubject_NumberOfSubject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="mt-3">Дата выдачи</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeliveryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="mt-3">Дата сдачи</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfIssue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfIssue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div >
    @Html.ActionLink("Вернуться", "Index")
</div>
