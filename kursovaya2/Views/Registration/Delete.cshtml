@model kursovaya2.Models.Registration

@{
    ViewBag.Title = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Регистрация задания</h4>
    <hr />

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            Дата выдачи
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>

        <dt>
            Дата сдачи
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfIssue)
        </dd>

        <dt>
            Имя студента
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Student.Fulll_Name)
        </dd>

        <dt>
            Название предмета
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaskOnTheSubject.Subject_Title)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-primary" /> |
            @Html.ActionLink("Вернуться", "Index")
        </div>
    }
</div>
