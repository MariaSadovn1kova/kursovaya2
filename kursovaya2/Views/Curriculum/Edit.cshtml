@model kursovaya2.Models.Curriculum

@{
    ViewBag.Title = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Редакирование</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Расписание</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <p>Название предмета</p>
            <div class="col-md-10">
                @Html.DropDownList("Subject_Title", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject_Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="mt-3">Номер группы</p>
            <div class="col-md-10">
                @Html.DropDownList("Group_NumberOfGroup", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Group_NumberOfGroup, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-2">
    @Html.ActionLink("Вернуться", "Index")
</div>