@model kursovaya2.Models.Student

@{
    ViewBag.Title = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 class="mt-3">Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Студент</h4>
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            Номер зачетной книжки
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>
        <dt>
            Номер группы
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Group_NumberOfGroup)
        </dd>

        <dt>
            Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fulll_Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-primary" /> |
            @Html.ActionLink("Вернуться", "Index")
        </div>
    }
</div>