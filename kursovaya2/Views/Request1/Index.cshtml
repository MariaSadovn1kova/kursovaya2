@model kursovaya2.Models.StudentGroup


@{
    ViewBag.Title = "Регистрации";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mt-4">Выберите номер группы</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group mt-3">
        <div class="col-4">
            @Html.DropDownList("NumberOfGroup", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-offset-2 col-4 mt-3">
        <input type="submit" value="Найти" class="btn btn-primary" />
    </div>
}


