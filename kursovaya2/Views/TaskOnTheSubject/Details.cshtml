@model kursovaya2.Models.TaskOnTheSubject

@{
    ViewBag.Title = "Справка";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Справка</h2>

<div>
    <h4>Задание по предмету</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер задания
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberOfSubject)
        </dd>
        <dt>
            Название предмета
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject_Title)
        </dd>

        <dt>
            Краткое содержание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Synopsis)
        </dd>

    </dl>
</div>
<p>
    @{var id = Model.NumberOfSubject;}
    <a class="btn btn-primary" href="/TaskOnTheSubject/Edit/@id">Редактировать</a> |
    @Html.ActionLink("Вернуться", "Index")
</p>
